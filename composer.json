{
    "name": "niazpardazsms/sms",
    "description": "PHP SDK for Niazpardaz SMS API - SDK رسمی پنل پیامکی نیازپرداز",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "sms",
        "iran",
        "niazpardaz",
        "otp",
        "persian",
        "laravel-sms",
        "symfony-sms",
        "php-sms",
        "sms-gateway",
        "sms-api",
        "voice-otp",
        "bulk-sms",
        "پیامک",
        "نیازپرداز"
    ],
    "homepage": "https://niazpardaz-sms.com",
    "authors": [
        {
            "name": "Niazpardaz",
            "homepage": "https://niazpardaz-sms.com"
        }
    ],
    "support": {
        "issues": "https://github.com/NiazpardazSms/niazpardaz-sms-php/issues",
        "source": "https://github.com/NiazpardazSms/niazpardaz-sms-php"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Recommended HTTP client implementation (^7.0)",
        "symfony/http-client": "Symfony HTTP client - use with NiazpardazSmsClient::withSymfonyClient()",
        "php-http/curl-client": "Lightweight cURL-based HTTP client"
    },
    "autoload": {
        "psr-4": {
            "Niazpardaz\\Sms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Niazpardaz\\Sms\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Niazpardaz\\Sms\\Laravel\\NiazpardazSmsServiceProvider"
            ],
            "aliases": {
                "NiazpardazSms": "Niazpardaz\\Sms\\Laravel\\Facades\\NiazpardazSms"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
